<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">First</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger fw-bold" role="alert">
                                data contact kosong </div>
                        </td>
                    </tr>
                <% } %>
                <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                    <th scope="row"><%= i++ %></th>
                    <td><%= contact.nama %></td>
                    <td><%= contact.email %><</td>
                    <td>
                       <a href="/contact/<%= contact.nama %>" class="btn btn-success rounded-pill"><i class="bi bi-eye-fill">  detail</i></a>
                    </td>
                  </tr>
                <% }) %>
                  
                
              </table>
        </div>
    </div>
</div>